<!--                    BOOK ATTRIBUTES                            -->
<!--                    Attributes for the top-level element
                        <book>                                     -->
<!ENTITY % pm-record-atts
           "%jats-common-atts;                                       
             record-type  CDATA                             #IMPLIED
             xml:lang   NMTOKEN                           'en'
             %XLINK.xmlns.attrib;
             %MATHML.xmlns.attrib;
             %xinclude.xmlns.attrib;
             %Schema.xmlns.attrib;"                                  >

<!ENTITY % pm-record-set-atts
           "%XLINK.xmlns.attrib;
             %MATHML.xmlns.attrib;
             %xinclude.xmlns.attrib;
             %Schema.xmlns.attrib;"                                  >

<!--                    BOOK ATTRIBUTES                            -->
<!--                    Attributes for the top-level element
                        <book>                                     -->
<!ENTITY % book-atts
           "%jats-common-atts;                                       
             book-type  CDATA                             #IMPLIED
             %dtd-version;
             indexed    (yes | no)                        #IMPLIED
             xml:lang   NMTOKEN                           'en'
             %XLINK.xmlns.attrib;
             %MATHML.xmlns.attrib;
             %xinclude.xmlns.attrib;
             %Schema.xmlns.attrib;"                                  >


